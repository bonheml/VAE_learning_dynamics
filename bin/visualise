#!/usr/bin/env python
import logging
import hydra
from hydra.utils import instantiate
from omegaconf import OmegaConf

logger = logging.getLogger("visualise")


@hydra.main(config_path="config/visualisation", config_name="config")
def visualise(cfg):
    logger.info("Model config:\n{}".format(OmegaConf.to_yaml(cfg)))

    logger.info("Creating the visualiser...")
    visualiser = instantiate(cfg.visualiser)
    visualiser.visualise()


if __name__ == "__main__":
    visualise()
