#!/usr/bin/env python
import logging
import hydra
from omegaconf import OmegaConf

from vae_ld.learning_dynamics.visualisation import cka_heatmap

logger = logging.getLogger("visualise")


@hydra.main(config_path="config/visualisation", config_name="config")
def visualise(cfg):
    logger.info("Visualisation config:\n{}".format(OmegaConf.to_yaml(cfg)))
    cka_heatmap(cfg.input_dir)


if __name__ == "__main__":
    visualise()
